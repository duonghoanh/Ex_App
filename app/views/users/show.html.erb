<% provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
<%=@user.email%>
</h1>
</section>
</aside>
<div class="col-md-8">
    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.size %>)</h3>
      <ol class="microposts">
        <%= render partial: @microposts %>
      </ol>
      <%= paginate(@microposts, window: 2) %>
    <% end %>
  </div>
</div>
